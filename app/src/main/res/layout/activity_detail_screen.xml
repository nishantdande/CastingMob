<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_navigate_before_white"
                />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/detail_polaroid_photo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/my_polaroid"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/detail_cover_photo"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/detail_cover_photo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/my_photos"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/container"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>

